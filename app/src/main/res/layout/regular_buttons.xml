<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.shaishavgandhi.loginbuttons.GooglePlusButton
        android:id="@+id/google"
        android:layout_above="@+id/facebook"
        android:layout_width="match_parent"
        android:textAlignment="center"
        app:iconSize="30dp"
        android:layout_margin="5dp"
        android:text="@string/sign_in_with_google"
        android:layout_height="wrap_content"
        />

    <com.shaishavgandhi.loginbuttons.FacebookButton
        android:id="@+id/facebook"
        android:layout_above="@+id/twitter"
        android:layout_width="match_parent"
        android:text="@string/sign_in_with_facebook"
        app:iconSize="30dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        />

    <com.shaishavgandhi.loginbuttons.TwitterButton
        android:layout_width="match_parent"
        android:id="@+id/twitter"
        android:layout_above="@+id/linkedin"
        app:iconSize="30dp"
        android:layout_margin="5dp"
        android:text="@string/sign_in_with_twitter"
        android:layout_height="wrap_content"
        />

    <com.shaishavgandhi.loginbuttons.LinkedInButton
        android:id="@+id/linkedin"
        android:layout_width="match_parent"
        android:layout_above="@+id/anon"
        app:iconSize="30dp"
        android:layout_margin="5dp"
        android:text="@string/sign_in_with_linkedin"
        android:layout_height="wrap_content"
        />

    <com.shaishavgandhi.loginbuttons.AnonButton
        android:id="@+id/anon"
        android:layout_width="match_parent"
        app:iconSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:text="@string/sign_in_anonymous"
        android:layout_height="wrap_content"
        />

</RelativeLayout>